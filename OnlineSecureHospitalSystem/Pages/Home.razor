@page "/home"
@using OnlineSecureHospitalSystem.Services.Authorization
@inject AuthorizationService authorizationService
@inject NavigationManager Navigation
@inject AccessControlService AccessControl

<PageTitle>Home - Online Secure Hospital System</PageTitle>

@code {
    protected override async Task OnInitializedAsync()
    {
        await AccessControl.CheckAccessAsync(requireDefaultPasswordUpdated: true, allowedRoles: null!);
    }
}

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0">
    <MudPaper Elevation="0" Class="pa-8 text-center" Style="background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-primary-darken) 100%); color: white;">
        <MudIcon Icon="@Icons.Material.Filled.LocalHospital" Size="Size.Large" Class="mb-4" Style="font-size: 4rem;" />
        <MudText Typo="Typo.h2" Class="mb-3 font-weight-bold">Online Secure Hospital System</MudText>
        <MudText Typo="Typo.h6" Class="mb-0">Providing comprehensive healthcare management with security and efficiency</MudText>
    </MudPaper>
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-8">
        <MudCard Elevation="2" Class="mb-8">
            <MudCardContent Class="text-center pa-6">
                <MudText Typo="Typo.h4" Color="Color.Primary" Class="mb-3">Welcome to Our Digital Healthcare Platform</MudText>
                <MudText Typo="Typo.body1" Class="text-muted">
                    Our secure online hospital system connects patients, doctors, receptionists, and administrators
                    in a seamless digital healthcare environment, ensuring quality care and efficient management.
                </MudText>
            </MudCardContent>
        </MudCard>
        <MudGrid Spacing="4" Class="mb-8">
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardContent Class="text-center pa-4">
                        <MudIcon Icon="@Icons.Material.Filled.MedicalServices" Size="Size.Large" Color="Color.Success" Class="mb-3" />
                        <MudText Typo="Typo.h6" Class="mb-2">For Doctors</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Manage patient records, appointments, prescriptions, and medical history with advanced tools and secure access.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardContent Class="text-center pa-4">
                        <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Large" Color="Color.Info" Class="mb-3" />
                        <MudText Typo="Typo.h6" Class="mb-2">For Patients</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Book appointments, view medical records, access prescriptions, and communicate with healthcare providers.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardContent Class="text-center pa-4">
                        <MudIcon Icon="@Icons.Material.Filled.Computer" Size="Size.Large" Color="Color.Warning" Class="mb-3" />
                        <MudText Typo="Typo.h6" Class="mb-2">For Receptionists</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Handle appointment scheduling, patient registration, and front-desk operations efficiently.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="h-100">
                    <MudCardContent Class="text-center pa-4">
                        <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Large" Color="Color.Error" Class="mb-3" />
                        <MudText Typo="Typo.h6" Class="mb-2">For Administrators</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Oversee system operations, manage users, generate reports, and maintain security protocols.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
        <MudPaper Elevation="1" Class="pa-6 mb-8">
            <MudText Typo="Typo.h4" Color="Color.Primary" Class="mb-6 text-center">Why Choose Our System?</MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <MudStack Row="true" Spacing="3">
                        <MudIcon Icon="@Icons.Material.Filled.Security" Size="Size.Large" Color="Color.Success" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.h6">Secure & Compliant</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Built with healthcare security standards in mind, ensuring patient data protection and regulatory compliance.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudStack Row="true" Spacing="3">
                        <MudIcon Icon="@Icons.Material.Filled.AccessTime" Size="Size.Large" Color="Color.Info" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.h6">24/7 Accessibility</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Access your healthcare information and services anytime, anywhere with our secure online platform.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudStack Row="true" Spacing="3">
                        <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Large" Color="Color.Warning" />
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.h6">Efficient Operations</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Streamlined workflows and automated processes improve efficiency and reduce waiting times.
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudPaper>
        <MudCard Elevation="1" Class="mb-8">
            <MudCardContent Class="pa-6">
                <MudGrid Spacing="4" Class="text-center">
                    <MudItem xs="6" md="3">
                        <MudText Typo="Typo.h3" Color="Color.Primary" Class="font-weight-bold">24/7</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">System Availability</MudText>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudText Typo="Typo.h3" Color="Color.Success" Class="font-weight-bold">100%</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Data Security</MudText>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudText Typo="Typo.h3" Color="Color.Info" Class="font-weight-bold">Fast</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Response Times</MudText>
                    </MudItem>
                    <MudItem xs="6" md="3">
                        <MudText Typo="Typo.h3" Color="Color.Warning" Class="font-weight-bold">Easy</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">User Experience</MudText>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
        <MudCard Elevation="3" Style="background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-primary-darken) 100%); color: white;">
            <MudCardContent Class="text-center pa-6">
                <MudText Typo="Typo.h5" Class="mb-3">Ready to Get Started?</MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    Navigate through the system using the menu above. Each section is designed to provide you with the tools and information you need.
                </MudText>
                <MudStack Row="true" Spacing="4" Class="mb-3" Style="justify-content: center;">
                    <MudIcon Icon="@Icons.Material.Filled.Computer" Size="Size.Large" Style="opacity: 0.8;" />
                    <MudIcon Icon="@Icons.Material.Filled.PhoneAndroid" Size="Size.Large" Style="opacity: 0.8;" />
                    <MudIcon Icon="@Icons.Material.Filled.Tablet" Size="Size.Large" Style="opacity: 0.8;" />
                </MudStack>
                <MudText Typo="Typo.caption" Style="opacity: 0.8;">Accessible on all devices</MudText>
            </MudCardContent>
        </MudCard>
    </MudContainer>
</MudContainer>

<style>
    .h-100 {
        height: 100%;
    }

    .text-center {
        text-align: center;
    }

    .text-muted {
        color: var(--mud-palette-text-secondary) !important;
    }

    .font-weight-bold {
        font-weight: 600 !important;
    }
</style>